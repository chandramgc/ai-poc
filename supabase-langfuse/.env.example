# =============================================================================
# POSTGRES DATABASE
# =============================================================================
POSTGRES_PASSWORD=your-super-secret-and-long-postgres-password
POSTGRES_USER=postgres
POSTGRES_DB=postgres

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# JWT Settings
# Generate a secure JWT secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
JWT_EXPIRY=3600

# API Settings
API_EXTERNAL_URL=http://localhost:6001
SITE_URL=http://localhost:6002
ADDITIONAL_REDIRECT_URLS=

# Auth Settings
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false

# SMTP Settings (for email auth)
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_SENDER_NAME=Supabase

# PostgREST Settings
PGRST_DB_SCHEMAS=public,storage,graphql_public

# Supabase API Keys
# IMPORTANT: After setting JWT_SECRET, generate proper tokens using:
#   cd supabase-langfuse && ./generate-jwt.sh
# Or see GENERATE-JWT-GUIDE.md for detailed instructions
# These are demo tokens - you MUST generate your own signed with YOUR JWT_SECRET
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6ImFub24iLCJleHAiOjE5ODM4MTI5OTZ9.CRXP1A7WOeoJeXxjNni43kdQwgnWNReilDMblYTn_I0
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6InNlcnZpY2Vfcm9sZSIsImV4cCI6MTk4MzgxMjk5Nn0.EGIM96RAZx35lJzdJsyH-qQwv8Hdp7fsn3W0YpN81IU

# Image Proxy Settings
IMGPROXY_ENABLE_WEBP_DETECTION=true

# =============================================================================
# LANGFUSE CONFIGURATION
# =============================================================================

# Langfuse Database (separate DB for Langfuse)
LANGFUSE_DB=langfuse

# Langfuse Authentication
# Generate with: openssl rand -base64 32
LANGFUSE_NEXTAUTH_URL=http://localhost:6000
LANGFUSE_NEXTAUTH_SECRET=your-super-secret-nextauth-secret-min-32-chars
LANGFUSE_SALT=your-super-secret-salt-min-32-chars

# Langfuse Features
LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all placeholder values with actual secrets before running
# 2. Never commit this .env file with real secrets to version control
# 3. Use strong, randomly generated values for all secrets
# 4. Generate JWT secret: openssl rand -base64 32
# 5. For production, use proper SMTP settings for email auth
# 6. The SUPABASE_ANON_KEY and SUPABASE_SERVICE_ROLE_KEY should be valid JWTs
#    signed with your JWT_SECRET. Use https://supabase.com/docs/guides/hosting/overview#api-keys
#    or generate them with a JWT library
