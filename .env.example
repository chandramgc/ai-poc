# Application Settings (overrides config.yml)
APP__HOST=0.0.0.0
APP__PORT=8000
APP__LOG_LEVEL=INFO

# Model Settings
MODEL__NAME=google/gemma-2-2b-it
MODEL__SOURCE=hub
MODEL__DEVICE=cpu
MODEL__MAX_TOKENS=512
MODEL__TEMPERATURE=0.7

# Hugging Face Token (REQUIRED)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Security
SECURITY__API_KEY=your-secure-api-key-here
SECURITY__MAX_PROMPT_CHARS=4000

# Rate Limiting
RATE_LIMIT__ENABLED=true
RATE_LIMIT__REQUESTS_PER_MINUTE=10

# Cache
CACHE__ENABLED=true
CACHE__SIZE=100

# Metrics
METRICS__ENABLED=true
